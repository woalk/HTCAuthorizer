<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/android_primary</item>
        <item name="android:colorPrimaryDark">@color/android_primary_dark</item>
        <item name="android:colorAccent">@color/android_accent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/android_primary</item>
        <item name="android:colorPrimaryDark">@color/android_primary_dark</item>
        <item name="android:colorAccent">@color/android_accent</item>
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.TextAppearanceTitle"
           parent="android:TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
