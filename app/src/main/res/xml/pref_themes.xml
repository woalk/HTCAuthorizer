<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/pref_cat_themes">
<PreferenceCategory
    android:title="Themes">

    <SwitchPreference
        android:defaultValue="false"
        android:key="use_themes"
        android:summary="@string/pref_themes_check_summary"
        android:title="@string/pref_themes_check_title"/>

    <com.woalk.apps.xposed.htcblinkfeedauthorizer.XColorPickerPreference
        android:id="@+id/Picker1"
        android:dependency="use_themes"
        android:key="theme_PrimaryColor"
        android:layout="@layout/pref_colorpicker"
        android:persistent="true"
        android:defaultValue="2533018"
        android:summary="@string/pref_themes_theme_PrimaryColor_summary"
        android:title="@string/pref_themes_theme_PrimaryColor_title"/>
    <com.woalk.apps.xposed.htcblinkfeedauthorizer.XColorPickerPreference
        android:id="@+id/Picker2"
        android:dependency="use_themes"
        android:key="theme_PrimaryDarkColor"
        android:defaultValue="2533018"
        android:layout="@layout/pref_colorpicker"
        android:summary="@string/pref_themes_theme_PrimaryDarkColor_summary"
        android:title="@string/pref_themes_theme_PrimaryDarkColor_title"/>
    <com.woalk.apps.xposed.htcblinkfeedauthorizer.XColorPickerPreference
        android:id="@+id/Picker3"
        android:dependency="use_themes"
        android:defaultValue="2533018"
        android:key="theme_AccentColor"
        android:layout="@layout/pref_colorpicker"
        android:summary="@string/pref_themes_theme_AccentColor_summary"
        android:title="@string/pref_themes_theme_AccentColor_title"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="use_themes"
        android:key="systemui_use_launcher_theme"
        android:summary="@string/pref_themes_systemui_use_launcher_summary"
        android:title="@string/pref_themes_systemui_use_launcher_title"/>
</PreferenceCategory>

</PreferenceScreen>
